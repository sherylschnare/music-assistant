rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read all user profiles, but only edit their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Authenticated users can read and write to the songs collection.
    match /songs/{songId} {
      allow read, write: if request.auth != null;
    }
    
    // Authenticated users can read and write to the concerts collection.
    match /concerts/{concertId} {
      allow read, write: if request.auth != null;
    }

    // Authenticated users can read and write to the app-data collection (for taxonomy).
    match /app-data/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
